<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>soa.gtsntzs</groupId>
  <artifactId>examples</artifactId>
  <version>0.45</version>
  <packaging>pom</packaging>
  <name>Examples :: Aggregator</name>
  <description>
    Example Projects Aggregator.
  </description>
  <url>${site.url}</url>
  <!-- -->
  <modules>
    <module>archetypes</module>
  </modules>
  <!-- project info -->
  <inceptionYear>2014</inceptionYear>
  <organization>
    <name>gtsntzs</name>
    <url>https://github.com/gtsntzs</url>
  </organization>
  <developers>
    <developer>
      <id>gtsntzs</id>
      <name>Georgios Tsontzos</name>
      <url>https://github.com/gtsntzs</url>
    </developer>
  </developers>
  <properties>
    <!-- project properties -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <encoding>UTF-8</encoding>
	<!-- project site properties -->
    <github.global.server>github</github.global.server>
    <site.deploy.id>gh-pages</site.deploy.id>
    <site.github.issues.url>https://github.com/gtsntzs/blog/issues</site.github.issues.url>
    <site.url>https://gtsntzs.github.io/blog/</site.url>
    <repositoryName>blog</repositoryName>
    <repositoryOwner>gtsntzs</repositoryOwner>
    <site.deploy.url>https://github.com/gtsntzs/blog/tree/gh-pages</site.deploy.url>
    <!--
    <site.deploy.url>file:///media/Work/online/deploy/</site.deploy.url>
    -->
    <!-- maven report plugins -->
    <maven.site.plugin>3.3</maven.site.plugin>
    <maven.checkstyle.plugin>2.7</maven.checkstyle.plugin>
    <maven.cobertura.plugin>2.5.1</maven.cobertura.plugin>
    <maven.doxia.module.markdown.version>1.3</maven.doxia.module.markdown.version>
    <maven.javadoc.plugin>2.9</maven.javadoc.plugin>
    <maven.jxr.plugin>2.3</maven.jxr.plugin>
    <maven.pmd.plugin>2.7.1</maven.pmd.plugin>
    <maven.project.info.reports.plugin>2.6</maven.project.info.reports.plugin>
    <maven.sonar.plugin>3.3.1</maven.sonar.plugin>
    <maven.surefire.plugin>2.12.4</maven.surefire.plugin>
    <maven.taglist.plugin>2.4</maven.taglist.plugin>
    <maven.versions.plugin>1.3.1</maven.versions.plugin>
    <maven.compiler.plugin.version>2.5.1</maven.compiler.plugin.version>
    <github.site.maven.plugin.version>0.10-SNAPSHOT</github.site.maven.plugin.version>
    <!-- Dependency versioning properties -->
    <java.version>1.7</java.version>
    <velocity.version>1.7</velocity.version>
    <reflow.velocity.tools.version>1.1.1</reflow.velocity.tools.version>
  </properties>
  <!-- site generation -->
  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <name>Deployment through GitHub's site deployment plugin</name>
      <url>${site.deploy.url}</url>
    </site>
  </distributionManagement>
  <scm>
    <developerConnection>scm:git:git@github.com:gtsntzs/blog.git</developerConnection>
    <connection>scm:git:git@github.com:gtsntzs/blog.git</connection>
    <url>https://github.com/gtsntzs/blog/tree/master</url>
  </scm>
  <issueManagement>
    <system>GitHub</system>
    <url>${site.github.issues.url}</url>
  </issueManagement>
  <!-- -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>${maven.site.plugin}</version>
        <!--<inherited>false</inherited>-->
        <dependencies>
          <dependency>
            <groupId>lt.velykis.maven.skins</groupId>
            <artifactId>reflow-velocity-tools</artifactId>
            <version>${reflow.velocity.tools.version}</version>
          </dependency>
          <!-- Reflow skin requires Velocity >= 1.7 -->
          <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>${velocity.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <attach>true</attach>
          <generateReports>true</generateReports>
          <inputEncoding>${encoding}</inputEncoding>
          <outputEncoding>${encoding}</outputEncoding>
          <siteDirectory>${project.basedir}/src/site</siteDirectory>
          <!-- Site deployment done using GitHub site plugin -->
          <skipDeploy>true</skipDeploy>
          <!-- Here add the report Plugins -->
          <reportPlugins>
            <!--
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <version>${maven.javadoc.plugin}</version>
              <configuration>
                <aggregate>true</aggregate>
                <javadocDirectory>${project.basedir}/src/javadoc</javadocDirectory>
                <docfilessubdirs>true</docfilessubdirs>
              </configuration>
              <reportSets>
                <reportSet>
                  <reports>
                    <report>javadoc</report>
                  </reports>
                </reportSet>
              </reportSets>
            </plugin> -->
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-project-info-reports-plugin</artifactId>
              <version>${maven.project.info.reports.plugin}</version>
              <reportSets>
                <reportSet>
                  <reports>
                    <report>modules</report>
                    <!--   <report>summary</report>
                    <report>license</report>
                    <report>project-team</report> -->
                  </reports>
                </reportSet>
              </reportSets>
            </plugin>
          </reportPlugins>
        </configuration>
      </plugin>

      <plugin>
        <groupId>com.github.github</groupId>
        <artifactId>site-maven-plugin</artifactId>
        <version>${github.site.maven.plugin.version}</version>
        <executions>
          <execution>
              <configuration>
                  <repositoryName>blog</repositoryName>
                  <repositoryOwner>gtsntzs</repositoryOwner>
                  <message>Building site for my project</message>
                  <path>${project.distributionManagement.site.url}</path>
                  <tempWebappDirectory>${basedir}/target/site/tempdir</tempWebappDirectory>
                  <dryRun>true</dryRun>
              </configuration>
              <goals>
                  <goal>site</goal>
              </goals>
              <phase>site-deploy</phase>
          </execution>
        </executions>
      </plugin>

      <!-- -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.2</version>
        <configuration>
          <pushChanges>true</pushChanges>
          <localCheckout>true</localCheckout>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <!-- This version is necessary for use with git version 1.8.5 -->
            <version>1.8.1</version>
          </dependency>
        </dependencies>
      </plugin>

    </plugins>
    <!-- -->
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${maven.compiler.plugin.version}</version>
          <configuration>
            <source>${java.source}</source>
            <target>${java.source}</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
