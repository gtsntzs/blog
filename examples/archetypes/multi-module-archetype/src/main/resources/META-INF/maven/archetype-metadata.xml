<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0                                            http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="simple-archetype-java">
  <requiredProperties>
    <!--  properties -->
    <!-- project properties -->
    <requiredProperty key="java-version">
      <defaultValue>1.7</defaultValue>
    </requiredProperty>
    <!-- logging properties -->
    <requiredProperty key="slf4j-version">
      <defaultValue>1.7.7</defaultValue>
    </requiredProperty>
    <requiredProperty key="log4j-version">
      <defaultValue>1.2.17</defaultValue>
    </requiredProperty>
    <!-- test properties -->
    <requiredProperty key="junit-version">
      <defaultValue>4.11</defaultValue>
    </requiredProperty>
    <!-- plugin properties -->
    <requiredProperty key="maven-compiler-plugin-version">
      <defaultValue>2.5.1</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-resources-plugin-version">
      <defaultValue>2.6</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <!-- Parent Directory Structure -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>pom.xml</include>
        <include>ReadMe.md</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>src/site</directory>
    </fileSet>
    <!-- Module Directory Structure -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>__artifactId__-example</directory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>__artifactId__-example/src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>__artifactId__-example/src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>__artifactId__-example/src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>__artifactId__-example/src/test/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>__artifactId__-example/src/site</directory>
    </fileSet>
  </fileSets>
</archetype-descriptor>
